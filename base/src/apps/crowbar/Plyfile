executable crowbar {
    source_files {
        "crowbar"
    }
    include_directories {
        private "crowbar"
    }
    dependencies {
        private build_folder
        private cpp
        private pylon_reflect
        private crowbar_client
        private build_repository
    }
    link_libraries {
        if sys.target_platform == "windows" {
            "ole32.lib"
        }
    }
}

module crowbar_client {
    source_files {
        "crowbar-client/crowbar-client"
    }
    include_directories {
        public "crowbar-client"
    }
    dependencies {
        public reflect
    }
}
