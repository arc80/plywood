executable plytool {
    source_files {
        "plytool"
    }
    include_directories {
        private "plytool"
    }
    dependencies {
        private build_folder
        private cpp
        private pylon_reflect
        private plytool_client
        private build_repository
    }
    link_libraries {
        if sys.target_platform == "windows" {
            "ole32.lib"
        }
    }
}

module plytool_client {
    source_files {
        "plytool-client/plytool-client"
    }
    include_directories {
        public "plytool-client"
    }
    dependencies {
        public reflect
    }
}
