module runtime {
    source_files {
        public "ply_platform"
    }
    include_directories {
        public "."
        public join_path(build_folder, "codegen/ply-platform")
    }
    dependencies {
        public platform
    }
    link_libraries {
        if platform.name == "win32" {
            "ws2_32.lib"
        } else if platform.name == "macos" {
            find_mac_framework("CoreServices")
        } else {
            "-ldl"
        }
    }
    dynamic_link_prefix("PLL_DLL")
}
